    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <com.ramotion.foldingcell.FoldingCell
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/machineLearningFoldingCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                folding-cell:additionalFlipsCount="1"
                folding-cell:cameraHeight="30"
                folding-cell:backSideColor="@color/button">
                ​
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_dark"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#fffff4"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="MACHINE LEARNING"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/machinelearning"
                            android:fontFamily="@font/lato"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="'Machine Intelligence is the last invention that humanity will ever need to make.' - Nick Bostrom. With the knowledge of Machine Learning, you have the ability to open doors of technology which we didn\'t even know existed. It is a revolution. Be a part of it by gaining knowledge about the world-changing technology at the Machine Learning Workshop brought to you by IETE-VIT this Synergy.#Awakentheinspiration #Synergy'19.\n\nRs. 900/-"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/machineLearningRegister"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/button"
                            android:fontFamily="@font/lato"
                            android:text="REGISTER"
                            android:textColor="@android:color/white"
                            android:textSize="30dp" />
                    </LinearLayout>


                </FrameLayout>
                ​
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contact_us_border">
                    <LinearLayout
                        android:layout_height="100dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_height="match_parent"
                            android:layout_width="100dp"
                            android:src="@drawable/machinelearningheader"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="MACHINE LEARNING"
                            android:textColor="@color/colorAccent"
                            android:textSize="27dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>
                ​
            </com.ramotion.foldingcell.FoldingCell>
